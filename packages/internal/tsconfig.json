{
  // "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    // "declaration": true,
    // "declarationDir": "./dist/types",
    // "emitDeclarationOnly": true,
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "esModuleInterop": true,
    "sourceMap": false,
    "inlineSources": false,
    "removeComments": false,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/node_modules/**", "**/*.test.ts", "./src/types/**"]
}